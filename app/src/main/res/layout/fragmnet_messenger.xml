<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70D373"
    android:paddingHorizontal="20dp"
    tools:context=".MainActivity">
    <EditText
        android:layout_centerHorizontal="true"
        android:textColor="#4CAF50"
        android:hint="user name ... "
        android:id="@+id/edtittextuser"
        android:layout_width="200dp"
        android:layout_height="50dp" />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/edtittextuser"
        android:layout_above="@id/containerchat"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/containerchat"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <EditText
            android:layout_toLeftOf="@id/imagesend"
            android:paddingLeft="15dp"
            android:background="@drawable/custom_edittext"
            android:textSize="20sp"
            android:hint="ná»™i dung ..."
            android:id="@+id/edtittext"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/imagesend"
            android:src="@drawable/iconsend"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

</RelativeLayout>