<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearlayout"
    android:background="@drawable/item_drawable1"
    android:padding="5dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:paddingVertical="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/tuyettinhcoc"
                    android:id="@+id/thumbnail"
                    android:layout_width="200dp"
                    android:scaleType="fitXY"
                    android:layout_height="150dp" />

                <TextView
                    android:id="@+id/textviewtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/thumbnail"
                    android:fontFamily="@font/henny_penny"
                    android:text="Tiêu đề"
                    android:textColor="#2B2323"
                    android:textSize="19sp" />
            </RelativeLayout>
            <TextView
                android:gravity="end"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="15 phút trước"
                android:textColor="#928A8A"
                android:textSize="15sp"
                android:layout_below="@id/textviewtitle"
                android:layout_toRightOf="@id/thumbnail"
                android:id="@+id/textviewminuteago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>