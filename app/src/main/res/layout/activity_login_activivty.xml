<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:padding="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/henny_penny"
            android:text="Sơn Tít"
            android:textColor="#fff"
            android:textSize="50sp" />
        <ProgressBar
            android:id="@+id/progresbar"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/edittexttk"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textPassword"
            android:layout_marginTop="15dp"
            android:id="@+id/edittextmk"
            android:textSize="20sp"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="#fff"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:background="#04504A"
            android:textAllCaps="true"
            android:text="login"
            android:textSize="15sp"
            android:id="@+id/butttonlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15sp"
            android:textColor="#E0D7D7"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="No Account yet? Creat one"
            android:id="@+id/textviewnotaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>